<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_xml">

    <ImageView
        android:id="@+id/innstillinger"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="settings"
        android:onClick="innstillinger"
        android:src="@drawable/baseline_settings_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck,MissingConstraints,OnClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/omkring"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/start_lyd_gjenkjenning"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/kontakter"
        android:layout_width="220dp"
        android:layout_height="48dp"
        android:backgroundTint="#F15E22"
        android:onClick="kontakter"
        android:text="@string/Kontakter"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/set_geo_lokasjon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/set_geo_lokasjon"
        android:layout_width="220dp"
        android:layout_height="48dp"
        android:backgroundTint="#F15E22"
        android:onClick="setGeolokasjon"
        android:text="@string/geolokasjon"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_lyd_gjenkjenning"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/test_Lydgjenkjenning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#F15E22"
        android:onClick="testLydgjenkjenning"
        android:text="@string/test_lydgjenkjenning"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_geo_lokasjon"
        tools:ignore="MissingConstraints" />
    <Space
        android:id="@+id/space2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/start_lyd_gjenkjenning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#F15E22"

        android:onClick="startLydgjenkjenning"
        android:text="Start"
        app:layout_constraintBottom_toTopOf="@+id/space2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/stop_lyd_gjenkjenning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#F15E22"
        android:onClick="stopLydgjenkjenning"
        android:text="Stop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space2" />
</androidx.constraintlayout.widget.ConstraintLayout>